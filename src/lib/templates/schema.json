{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "name", "description", "version", "colors", "fonts", "timing", "layout", "sequences"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the template (lowercase alphanumeric with hyphens)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable name for the template"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Description of the template's visual style"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "colors": {
      "type": "object",
      "required": [
        "background",
        "backgroundSecondary",
        "backgroundTertiary",
        "textPrimary",
        "textSecondary",
        "textMuted",
        "accent",
        "accentSecondary",
        "accentMuted",
        "completed",
        "dnf",
        "ratingHigh",
        "ratingMedium",
        "ratingLow",
        "overlay",
        "grain"
      ],
      "properties": {
        "background": {
          "type": "string",
          "description": "Primary background color (hex or rgba)"
        },
        "backgroundSecondary": {
          "type": "string",
          "description": "Secondary background color"
        },
        "backgroundTertiary": {
          "type": "string",
          "description": "Tertiary background color"
        },
        "textPrimary": {
          "type": "string",
          "description": "Primary text color"
        },
        "textSecondary": {
          "type": "string",
          "description": "Secondary text color"
        },
        "textMuted": {
          "type": "string",
          "description": "Muted text color"
        },
        "accent": {
          "type": "string",
          "description": "Primary accent color"
        },
        "accentSecondary": {
          "type": "string",
          "description": "Secondary accent color"
        },
        "accentMuted": {
          "type": "string",
          "description": "Muted accent color"
        },
        "completed": {
          "type": "string",
          "description": "Color for completed status"
        },
        "dnf": {
          "type": "string",
          "description": "Color for DNF (did not finish) status"
        },
        "ratingHigh": {
          "type": "string",
          "description": "Color for high ratings (8-10)"
        },
        "ratingMedium": {
          "type": "string",
          "description": "Color for medium ratings (5-7)"
        },
        "ratingLow": {
          "type": "string",
          "description": "Color for low ratings (1-4)"
        },
        "overlay": {
          "type": "string",
          "description": "Overlay color (typically rgba with transparency)"
        },
        "grain": {
          "type": "string",
          "description": "Grain effect color (typically rgba with low opacity)"
        }
      },
      "additionalProperties": false
    },
    "fonts": {
      "type": "object",
      "required": ["heading", "body", "mono"],
      "properties": {
        "heading": {
          "type": "string",
          "minLength": 1,
          "description": "Font family for headings"
        },
        "body": {
          "type": "string",
          "minLength": 1,
          "description": "Font family for body text"
        },
        "mono": {
          "type": "string",
          "minLength": 1,
          "description": "Monospace font family"
        }
      },
      "additionalProperties": false
    },
    "timing": {
      "type": "object",
      "required": [
        "introFadeIn",
        "introHold",
        "introFadeOut",
        "introTotal",
        "bookSlideIn",
        "bookTitleType",
        "bookRatingCount",
        "bookHold",
        "bookExit",
        "bookTotal",
        "statsCountUp",
        "statsHold",
        "statsFadeOut",
        "statsTotal",
        "comingSoonFadeIn",
        "comingSoonHold",
        "comingSoonFadeOut",
        "comingSoonTotal",
        "outroFadeIn",
        "outroHold",
        "outroFadeOut",
        "outroTotal",
        "transitionOverlap"
      ],
      "properties": {
        "introFadeIn": {
          "type": "number",
          "minimum": 0,
          "maximum": 300,
          "description": "Intro fade in duration (frames)"
        },
        "introHold": {
          "type": "number",
          "minimum": 0,
          "maximum": 600,
          "description": "Intro hold duration (frames)"
        },
        "introFadeOut": {
          "type": "number",
          "minimum": 0,
          "maximum": 300,
          "description": "Intro fade out duration (frames)"
        },
        "introTotal": {
          "type": "number",
          "minimum": 0,
          "maximum": 900,
          "description": "Total intro duration (frames)"
        },
        "bookSlideIn": {
          "type": "number",
          "minimum": 0,
          "maximum": 180,
          "description": "Book slide in duration (frames)"
        },
        "bookTitleType": {
          "type": "number",
          "minimum": 0,
          "maximum": 180,
          "description": "Book title typing duration (frames)"
        },
        "bookRatingCount": {
          "type": "number",
          "minimum": 0,
          "maximum": 180,
          "description": "Book rating count up duration (frames)"
        },
        "bookHold": {
          "type": "number",
          "minimum": 0,
          "maximum": 600,
          "description": "Book hold duration (frames)"
        },
        "bookExit": {
          "type": "number",
          "minimum": 0,
          "maximum": 180,
          "description": "Book exit duration (frames)"
        },
        "bookTotal": {
          "type": "number",
          "minimum": 0,
          "maximum": 900,
          "description": "Total book reveal duration (frames)"
        },
        "statsCountUp": {
          "type": "number",
          "minimum": 0,
          "maximum": 300,
          "description": "Stats count up duration (frames)"
        },
        "statsHold": {
          "type": "number",
          "minimum": 0,
          "maximum": 600,
          "description": "Stats hold duration (frames)"
        },
        "statsFadeOut": {
          "type": "number",
          "minimum": 0,
          "maximum": 300,
          "description": "Stats fade out duration (frames)"
        },
        "statsTotal": {
          "type": "number",
          "minimum": 0,
          "maximum": 900,
          "description": "Total stats duration (frames)"
        },
        "comingSoonFadeIn": {
          "type": "number",
          "minimum": 0,
          "maximum": 300,
          "description": "Coming soon fade in duration (frames)"
        },
        "comingSoonHold": {
          "type": "number",
          "minimum": 0,
          "maximum": 600,
          "description": "Coming soon hold duration (frames)"
        },
        "comingSoonFadeOut": {
          "type": "number",
          "minimum": 0,
          "maximum": 300,
          "description": "Coming soon fade out duration (frames)"
        },
        "comingSoonTotal": {
          "type": "number",
          "minimum": 0,
          "maximum": 900,
          "description": "Total coming soon duration (frames)"
        },
        "outroFadeIn": {
          "type": "number",
          "minimum": 0,
          "maximum": 300,
          "description": "Outro fade in duration (frames)"
        },
        "outroHold": {
          "type": "number",
          "minimum": 0,
          "maximum": 600,
          "description": "Outro hold duration (frames)"
        },
        "outroFadeOut": {
          "type": "number",
          "minimum": 0,
          "maximum": 300,
          "description": "Outro fade out duration (frames)"
        },
        "outroTotal": {
          "type": "number",
          "minimum": 0,
          "maximum": 900,
          "description": "Total outro duration (frames)"
        },
        "transitionOverlap": {
          "type": "number",
          "minimum": 0,
          "maximum": 60,
          "description": "Transition overlap between sequences (frames)"
        }
      },
      "additionalProperties": false
    },
    "layout": {
      "type": "object",
      "required": ["introStyle", "bookRevealAnimation", "statsAnimation", "outroAnimation"],
      "properties": {
        "introStyle": {
          "type": "string",
          "enum": ["slam", "fadeUp", "scaleIn", "typewriter"],
          "description": "Intro text animation style"
        },
        "bookRevealAnimation": {
          "type": "string",
          "enum": ["slide", "fade", "scale"],
          "description": "Book reveal animation style"
        },
        "statsAnimation": {
          "type": "string",
          "enum": ["countUp", "fadeIn", "pop"],
          "description": "Stats animation style"
        },
        "outroAnimation": {
          "type": "string",
          "enum": ["fade", "scale", "slide"],
          "description": "Outro animation style"
        }
      },
      "additionalProperties": false
    },
    "sequences": {
      "type": "object",
      "required": ["intro", "bookReveal", "stats", "comingSoon", "outro"],
      "properties": {
        "intro": {
          "type": "boolean",
          "description": "Whether to include intro sequence"
        },
        "bookReveal": {
          "type": "boolean",
          "description": "Whether to include book reveal sequence"
        },
        "stats": {
          "type": "boolean",
          "description": "Whether to include stats sequence"
        },
        "comingSoon": {
          "type": "boolean",
          "description": "Whether to include coming soon sequence"
        },
        "outro": {
          "type": "boolean",
          "description": "Whether to include outro sequence"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
